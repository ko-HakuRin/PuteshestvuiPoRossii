<Window x:Class="TravelAroundRussia.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное Окно"
        Height="450"
        MinHeight="450"
        Width="800"
        MinWidth="800">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="320">
        <Button Content="Окно Авторизации и Регистрации"
                Click="OpenAuthWindow_Click" />
        <Button Content="Окно Туров"
                Margin="0,10"
                Click="OpenToursWindow_Click" />
        <Button Content="Окно Отелей"
                Click="OpenHotelsWindow_Click" />
        <Button Content="Окно Добавление и Редактирования Отеля"
                Margin="0,10,0,0"
                Click="OpenHotelInfo_Click" />
    </StackPanel>
</Window>
